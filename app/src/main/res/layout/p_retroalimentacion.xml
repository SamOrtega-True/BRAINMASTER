<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".P_Partida">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ImgBack"
            android:layout_width="64px"
            android:layout_height="match_parent"
            android:src="@drawable/left_arrow_black"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:clickable="true"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/logo_brainmaster" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <RelativeLayout
                android:id="@+id/lblOp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:alpha="0.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_bttn_op1"
                    android:text="Opcion 1"
                    android:gravity="left"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="40dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:orientation="vertical"
                    android:fontFamily="@font/quicksandbold">

                    <TextView
                        android:id="@+id/Opcion1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Opcion 1"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:fontFamily="@font/quicksandbold"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/handOp1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/style_hand"
                    android:src="@drawable/like"
                    android:visibility="invisible"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lblOp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:alpha="0.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_bttn_op2"
                    android:text="Opcion 1"
                    android:gravity="left"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="40dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:orientation="vertical"
                    android:fontFamily="@font/quicksandbold">

                    <TextView
                        android:id="@+id/Opcion2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Opcion 2"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:fontFamily="@font/quicksandbold"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/handOp2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/style_hand"
                    android:src="@drawable/dislike"
                    android:visibility="invisible"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lblOp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:alpha="0.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_bttn_op3"
                    android:text="Opcion 3"
                    android:gravity="left"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="40dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:orientation="vertical"
                    android:fontFamily="@font/quicksandbold">

                    <TextView
                        android:id="@+id/Opcion3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Opcion 3"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:fontFamily="@font/quicksandbold"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/handOp3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/style_hand"
                    android:src="@drawable/like"
                    android:visibility="invisible"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lblOp4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:alpha="0.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_bttn_op4"
                    android:text="Opcion 4"
                    android:gravity="left"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="40dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:orientation="vertical"
                    android:fontFamily="@font/quicksandbold">

                    <TextView
                        android:id="@+id/Opcion4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Opcion 4"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:fontFamily="@font/quicksandbold"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/handOp4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/style_hand"
                    android:src="@drawable/dislike"
                    android:visibility="invisible"/>
            </RelativeLayout>

            <Button
                android:id="@+id/iniciar_s"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/style_bttn"
                android:fontFamily="@font/quicksandbold"
                android:text="Continuar"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:onClick="Continuar"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:minHeight="110dp"
            android:layout_height="wrap_content"
            android:background="@drawable/style_pregunta">

            <TextView
                android:id="@+id/txtPregunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:fontFamily="@font/quicksandbold"
                android:text="El modelo basado en componentes es tambien conocido como:"
                android:textColor="@color/white"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/style_puntos">

            <TextView
                android:id="@+id/txtPuntos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/quicksandbold"
                android:text="4 pts"
                android:layout_marginTop="5dp"
                android:textColor="#0020FF"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>