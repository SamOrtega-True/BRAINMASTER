<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#397DC9"
    tools:context=".P_Login">

    <ImageView
        android:id="@+id/ImgBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/left_arrow_white"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:clickable="true"/>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:background="@drawable/style_circle1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-180dp"
        android:layout_marginLeft="-180dp"/>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:background="@drawable/style_circle2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-180dp"
        android:layout_marginTop="-180dp"/>

    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:paddingBottom="100dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_brainmaster"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/quicksandbold"
            android:text="Correo Institucional"
            android:textColor="#FFFDFD"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/txtCorreo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_style"
            android:backgroundTint="#FFFDFD"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:shadowRadius="2"
            android:textIsSelectable="false"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:paddingLeft="20dp"
            android:fontFamily="@font/quicksandbold"
            android:singleLine="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/quicksandbold"
            android:text="Contraseña"
            android:textColor="#FFFDFD"
            android:textSize="20sp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtContrasena"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_style"
                android:backgroundTint="#FFFDFD"
                android:ems="10"
                android:inputType="textPassword"
                android:shadowRadius="2"
                android:textIsSelectable="false"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:fontFamily="@font/quicksandbold"
                android:singleLine="true" />

            <ImageView
                android:id="@+id/imgEye"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_visibility_off_24"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/errorLogin"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@drawable/error_text_view"
            android:text="Error"
            android:textColor="#FF0000"
            android:paddingRight="20sp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:alpha="0">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/error_code_jugar"
                android:layout_marginLeft="6sp"
                android:layout_marginRight="5sp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/txtErrorMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Error"
                android:textColor="#FF0000"
                android:textSize="13dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <Button
            android:id="@+id/iniciar_s"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/style_bttn"
            android:fontFamily="@font/quicksandbold"
            android:text="Iniciar Sesión"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:onClick="Prueba"/>

        <TextView
            android:id="@+id/txtRegistrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/quicksandbold"
            android:text="Registrar nuevo usuario"
            android:textColor="#FFFDFD"
            android:textSize="20sp"
            android:clickable="true"/>

        <TextView
            android:id="@+id/txtRecuperar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/quicksandbold"
            android:text="¿Ha olvidado su contraseña?"
            android:textColor="#FFFDFD"
            android:textSize="20sp"
            android:clickable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo_utp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo_fisc"/>
    </LinearLayout>
</RelativeLayout>